{
  "name": "AccordionWidget",
  "type": "view",
  "styles": ["match_parent"],
  "elements": [
    {
      "id": "appbar",
      "type": "appbar",
      "title": "Accordion",
      "leftIcon": "arrow-left",
      "styles": [
        {
          "title": [
            {
              "textAlign": "center"
            }
          ]
        }
      ]
    },
    {
      "type": "view",
      "orientation": "vertical",
      "scrollable": true,
      "align": "center_top",
      "styles": ["match_parent"],
      "elements": [
        {
          "id": "openDocLabel",
          "type": "label",
          "value": "{docLink}",
          "styles": ["label_link"]
        },
        {
          "type": "label",
          "align": "center",
          "value": "{accordionDescription}"
        },
        {
          "type": "view",
          "orientation": "horizontal",
          "styles": [
            "width_full",
            "padding_all_16",
            "margin_vertical_8",
            {
              "self": [
                {
                  "justifyContent": "space-between",
                  "borderWidth": 1,
                  "borderRadius": 5,
                  "backgroundColor": "#f3f3f3"
                }
              ]
            }
          ],
          "elements": [
            {
              "type": "view",
              "elements": [
                {
                  "type": "checkbox",
                  "id": "visibilityCheckbox",
                  "title": "visibility",
                  "value": true
                },
                { "type": "button", "title": "expand", "id": "expandButton", "styles": ["margin_vertical_8"] },
                { "type": "button", "title": "collapse", "id": "collapseButton", "styles": ["margin_vertical_8"] },
                { "type": "button", "title": "toggle", "id": "toggleButton", "styles": ["margin_vertical_8"] }
              ]
            },
            {
              "type": "view",
              "elements": [
                {
                  "type": "label",
                  "value": "button icon"
                },
                {
                  "id": "iconRadioGroup",
                  "type": "list",
                  "displayType": "radioGroup",
                  "data": [
                    {
                      "id": "0",
                      "value": "alarm",
                      "title": "alarm"
                    },
                    {
                      "id": "1",
                      "value": "alarm-off",
                      "title": "alarm-off"
                    },
                    {
                      "id": "2",
                      "title": "none"
                    }
                  ]
                }
              ]
            },
            {
              "type": "view",
              "elements": [
                {
                  "type": "label",
                  "value": "accordion title"
                },
                {
                  "id": "titleRadioGroup",
                  "type": "list",
                  "displayType": "radioGroup",
                  "data": [
                    {
                      "id": "0",
                      "value": "title",
                      "title": "short"
                    },
                    {
                      "id": "1",
                      "value": "very very very long title for accordion",
                      "title": "long"
                    },
                    {
                      "id": "2",
                      "title": "none"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "id": "simpleAccordion",
          "type": "accordion",
          "title": "titleAccordion",
          "styles": [
            {
              "self": [
                {
                  "width": "100%"
                }
              ],
              "header": [
                {
                  "borderWidth": 1,
                  "borderColor": "#212121",
                  "padding": 8
                }
              ],
              "content": [
                {
                  "backgroundColor": "#E9E9E9"
                }
              ]
            }
          ],
          "elements": [
            {
              "type": "view",
              "styles": ["padding_all_16", "match_parent"],
              "scrollable": true,
              "elements": [
                {
                  "type": "label",
                  "id": "simpleAccordionContent",
                  "styles": [
                    "match_parent",
                    {
                      "self": [
                        {
                          "fontSize": 10
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
