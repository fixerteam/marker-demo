    {
      "type": "view",
      "orientation": "vertical",
      "scrollable": true,
      "align": "center_top",
      "styles": [
        "match_parent"
      ],
      "elements": [
        {
          "id": "openDocLabel",
          "type": "label",
          "value": "{docLink}",
          "styles": [
            "label_link"
          ]
        },
        {
          "type": "label",
          "align": "center",
          "value": "{dropdownDescription}"
        },
        {
          "type": "view",
          "orientation": "horizontal",
          "styles": [
            "width_full",
            "padding_all_16",
            "margin_vertical_8",
            "space_between",
            {
              "self": [
                {
                  "borderWidth": 1,
                  "borderRadius": 5,
                  "backgroundColor": "#f3f3f3"
                }
              ]
            }
          ],
          "elements": [
            {
              "type": "view",
              "elements": [
                {
                  "type": "checkbox",
                  "id": "visibilityCheckbox",
                  "title": "visibility",
                  "value": true
                },
                {
                  "type": "checkbox",
                  "id": "isReadOnlyCheckbox",
                  "title": "readonly"
                }
              ]
            },
            {
              "type": "view",
              "align": "center_top",
              "elements": [
                {
                  "id": "setDataButton",
                  "type": "button",
                  "title": "set data",
                  "styles": [
                    "margin_vertical_8"
                  ]
                },
                {
                  "id": "setValueButton",
                  "type": "button",
                  "title": "set value",
                  "styles": [
                    "margin_vertical_8"
                  ]
                },
                {
                  "id": "clearValueButton",
                  "type": "button",
                  "title": "clear value",
                  "styles": [
                    "margin_vertical_8"
                  ]
                }
              ]
            },
            {
              "type": "view",
              "align": "center_top",
              "elements": [
                {
                  "id": "setTitleButton",
                  "type": "button",
                  "title": "set title",
                  "styles": [
                    "margin_vertical_8"
                  ]
                },
                {
                  "id": "setErrorButton",
                  "type": "button",
                  "title": "set error",
                  "styles": [
                    "margin_vertical_8"
                  ]
                },
                {
                  "id": "clearErrorButton",
                  "type": "button",
                  "title": "clear error",
                  "styles": [
                    "margin_vertical_8"
                  ]
